@model CadastroVeiculos.Models.Veiculo

@{
    ViewBag.Title = "Remover";
}

<h3>Tem certeza que deseja remover este veículo?</h3>
<div>
    <hr />
	<dl class="dl-horizontal">
		<dt>
			Categoria
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Categoria.Descricao)
		</dd>

		<dt>
			Responsável
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Funcionario.Nome)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Placa)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Placa)
		</dd>

		<dt>
			Descrição
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Frota)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Ano)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Ano)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.DataAquisicao)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.DataAquisicao)
		</dd>

	</dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remover" class="btn btn-danger" />
            <a href="@Url.Content("~/")" class="btn btn-primary">Voltar</a>
        </div>
    }
</div>
